set(ARDUINO_DEFAULT_BOARD nano328) # Default Board ID, when not specified
set(ARDUINO_DEFAULT_PORT /dev/ttyUSB0) # Default Port, when not specified

generate_arduino_library(main_lib
    SRCS  main_lib.cpp
    HDRS  main_lib.h
    BOARD nano328)

generate_arduino_example(wire_example
    LIBRARY Wire
    EXAMPLE master_writer)

generate_arduino_firmware(main
    SRCS main.cpp
    LIBS main_lib
    PORT /dev/ttyUSB0
    SERIAL picocom @SERIAL_PORT@ -b 9600 -l
    BOARD nano328)
